<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtViewDescription"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center_vertical"
        android:paddingStart="8dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        style="@style/text_app"
        android:layout_marginBottom="2dp"
        tools:ignore="RtlSymmetry" />

    <View
        style="@style/line_separator_vertical"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/txtViewVerificados"
        android:layout_width="38dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:text="@string/zero_qty"/>

    <View
        style="@style/line_separator_vertical"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/edtCheckQty"
        android:layout_width="38dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/zero_qty"/>

    <View
        style="@style/line_separator_vertical"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/txtViewOrderQty"
        android:layout_width="38dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/zero_qty"/>

</LinearLayout>